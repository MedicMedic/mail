{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "EmailReplyOptions": {
    "Header": "Hello from Merrsoft",
    "Introduction": "Our system has detected that the content of your email has a reply from our database. Here is the content of the reply:",
    "Conclusion": "If this is not the reply you expect, please let us know so our administrators can address your email.",
    "Closing": "Warm regards",
    "Signature": "Merrsoft Team"
  },
  "EmailApiOptions": {
    "OAuthClientCredentialsFilePath": "/path/to/your/credentials.json",
    "AccessTokenDirectoryPath": "/path/to/your/token_folder",
    "HostAddress": "your.email@sample.domain",
    "HostPassword": "your_email_account_app_password"
  },
  "DataStorageOptions": {
    "DataStorageType": 1,
    "DataStorageAccess": "/path/to/your/super/secret/data/storage/file"
  },
  "EmailAnalyzerOptions": {
    "AcceptanceScore": 0.35
  }
}